<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Trash Tracker Inventory</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-dark bg-success mb-4">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">‚ôªÔ∏è GC Clean - Trash Tracker</a>
    </div>
  </nav>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>Collected Trash</h3>
      <a href="/add" class="btn btn-success">‚ûï Add Trash</a>
      <a href="/leaderboard" class="btn btn-outline-success">üèÜ Leaderboard</a>
<a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>

    </div>

    <!-- Total counter -->
    <div class="alert alert-primary fw-bold">
      üåé Total Trash Collected: <%= total %> items
    </div>

    <table class="table table-hover align-middle shadow-sm bg-white rounded">
      <thead class="table-success">
        <tr>
          <th>Type</th>
          <th>Quantity</th>
          <th>Location</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (trashList.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center text-muted">No trash records yet.</td>
          </tr>
        <% } else { %>
          <% trashList.forEach(item => { %>
            <tr>
              <td><%= item.type %></td>
              <td><%= item.quantity %></td>
              <td><%= item.location %></td>
              <td><%= item.date %></td>
              <td>
                <a href="/edit/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/delete/<%= item.id %>" class="btn btn-danger btn-sm"
                  onclick="return confirm('Delete this item?');">Delete</a>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

</body>
</html>
