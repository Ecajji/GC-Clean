<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Leaderboard - Trash Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-success mb-4 shadow-sm">
    <div class="container d-flex justify-content-between align-items-center">
      <a class="navbar-brand fw-bold" href="/">♻️ GC Clean - Leaderboard</a>
      <div>
        <a href="/" class="btn btn-light btn-sm me-2">⬅ Back</a>
        <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mb-5">

    <!-- Title & Filter -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold text-success">🏆 Top Trash Collectors</h3>

      <!-- Department Filter -->
      <form method="GET" action="/leaderboard" class="d-flex">
        <select name="dept" class="form-select me-2" onchange="this.form.submit()">
          <option value="all" <%= deptFilter==='all'?'selected':'' %>>All Departments</option>
          <% departments.forEach(d => { %>
            <option value="<%= d %>" <%= deptFilter===d?'selected':'' %>><%= d %></option>
          <% }) %>
        </select>
        <button class="btn btn-success">Filter</button>
      </form>
    </div>

    <!-- Leaderboard Table -->
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">
        <% if (deptFilter !== 'all') { %>
          <h5 class="mb-3 text-secondary">🏫 Department: <span class="fw-bold text-success"><%= deptFilter %></span></h5>
        <% } %>

        <table class="table table-hover align-middle mb-0">
          <thead class="table-success">
            <tr>
              <th style="width: 80px;">Rank</th>
              <th>Collector</th>
              <th>Total Collected</th>
            </tr>
          </thead>
          <tbody>
            <% if (sorted.length === 0) { %>
              <tr>
                <td colspan="3" class="text-center text-muted py-4">No data yet.</td>
              </tr>
            <% } else { %>
              <% sorted.forEach((row, index) => { %>
                <tr class="<%= index === 0 ? 'table-warning' : index === 1 ? 'table-light' : '' %>">
                  <td class="fw-bold"><%= index + 1 %></td>
                  <td><%= row.collector %></td>
                  <td><%= row.total %> items</td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="text-center mt-4">
      <a href="/" class="btn btn-outline-success px-4">← Back to Dashboard</a>
    </div>
  </div>

  <footer class="text-center mt-5 text-muted">
    <small>© <%= new Date().getFullYear() %> GC Clean Project</small>
  </footer>

</body>
</html>
